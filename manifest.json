{
    "manifest_version": 2,
    "name": "AntiPhish",
    "short_name": "gmailjsnode",
    "version": "1.0",
    "author": "Abdul",
    "icons": {
        "16": "icons/AP-icon16.png",
        "48": "icons/AP-icon48.png",
        "128": "icons/AP-icon128.png",
        "200": "icons/antiphish-icon.png"
      },

    "description": "A minimal extension which demonstrates how to create a extension with Gmail.JS and NodeJS-based bundling.",

    "browser_action": {
        "default_icon": "icons/tool-icon.png",
        "default_title": "AntiPhish",
        "default_popup": "src/page_action/page_action.html"
      },

    "content_scripts": [
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "src/extensionInjector.js"
            ],
            "run_at": "document_start"
        }
    ],

    "web_accessible_resources": [
        "dist/gmailJsLoader.js",
        "dist/extension.js",
        "src/gmailJsLoader.js",
        "src/extension.js"
    ],

    "permissions": [
        "contextMenus",
        "tabs",
        "https://mail.google.com/mail/"
    ]
}
